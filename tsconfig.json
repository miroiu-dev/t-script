{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "Preserve",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,
    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noPropertyAccessFromIndexSignature": true,
    "allowUnreachableCode": false,
    "alwaysStrict": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictBindCallApply": true,
    "strictBuiltinIteratorReturn": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "useUnknownInCatchVariables": true,
    "paths": {
      "@/*": ["./*"],
      "@t-script/parser": ["./lib/language/parser"],
      "@t-script/parser/*": ["./lib/language/parser/*"],
      "@t-script/interpreter": ["./lib/language/interpreter"],
      "@t-script/interpreter/*": ["./lib/language/interpreter/*"],
      "@t-script/lexer": ["./lib/language/lexer"],
      "@t-script/lexer/*": ["./lib/language/lexer/*"],
      "@t-script/expressions": ["./lib/language/parser/expressions"],
      "@t-script/expressions/*": ["./lib/language/parser/expressions/*"],
      "@t-script/statements": ["./lib/language/parser/statements"],
      "@t-script/statements/*": ["./lib/language/parser/statements/*"],
      "@t-script/visitors": ["./lib/language/visitors"],
      "@t-script/visitors/*": ["./lib/language/visitors/*"]
    },
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
