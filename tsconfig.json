{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "Preserve",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noPropertyAccessFromIndexSignature": true,
    "allowUnreachableCode": false,
    "alwaysStrict": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictBindCallApply": true,
    "strictBuiltinIteratorReturn": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "useUnknownInCatchVariables": true,
    "paths": {
      "@t-script/*": ["./src/*"],
      "@t-script/parser": ["./src/language/parser"],
      "@t-script/parser/*": ["./src/language/parser/*"],
      "@t-script/interpreter": ["./src/language/interpreter"],
      "@t-script/interpreter/*": ["./src/language/interpreter/*"],
      "@t-script/lexer": ["./src/language/lexer"],
      "@t-script/lexer/*": ["./src/language/lexer/*"],
      "@t-script/expressions": ["./src/language/parser/expressions"],
      "@t-script/expressions/*": ["./src/language/parser/expressions/*"],
      "@t-script/statements": ["./src/language/parser/statements"],
      "@t-script/statements/*": ["./src/language/parser/statements/*"],
      "@t-script/visitors": ["./src/language/visitors"],
      "@t-script/visitors/*": ["./src/language/visitors/*"]
    }
  }
}
